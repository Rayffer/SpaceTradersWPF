<UserControl
    x:Class="SpaceTradersWPF.Controls.LoadingSpinner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Panel.ZIndex="20"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{DynamicResource DialogBackgroundSemiTransparentSolidColorBrush}"
    mc:Ignorable="d">
    <Image
        Width="50"
        Height="50"
        Margin="10"
        Source="{DynamicResource SpinnerSvgIcon}">
        <Image.Triggers>
            <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                <BeginStoryboard Storyboard="{StaticResource BlinkAnimation}" />
            </EventTrigger>
        </Image.Triggers>
    </Image>
</UserControl>