<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Border" x:Key="Border">
        <Setter Property="BorderBrush" Value="{DynamicResource ButtonBackgroundSolidColorBrush}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="Background" Value="{DynamicResource DialogBackgroundSolidColorBrush}" />
    </Style>
    <Style TargetType="Border" x:Key="BorderBackgroundLight">
        <Setter Property="BorderBrush" Value="{DynamicResource ButtonBackgroundSolidColorBrush}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="Background" Value="{DynamicResource ControlBackgroundSolidColorBrush}" />
    </Style>
    <Style TargetType="Border" x:Key="AccentBorder">
        <Setter Property="BorderBrush" Value="{DynamicResource ButtonBackgroundSolidColorBrush}" />
        <Setter Property="BorderThickness" Value="0, 0, 0, 2" />
        <Setter Property="Margin" Value="5,0" />
    </Style>
</ResourceDictionary>